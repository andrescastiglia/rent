{
    "name": "batch",
    "version": "1.0.0",
    "description": "Batch billing system for rent management platform",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "main": "dist/index.js",
    "bin": {
        "billing-batch": "dist/index.js"
    },
    "scripts": {
    "build": "rm -f *.tsbuildinfo && npx tsc -p tsconfig.build.json --outDir ./dist --listEmittedFiles",
        "start": "node dist/index.js",
        "dev": "npx ts-node src/index.ts",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest",
        "test:cov": "jest --coverage"
    },
    "dependencies": {
        "@nestjs/terminus": "^11.0.0",
        "@sendgrid/mail": "^8.1.6",
        "@types/qrcode": "^1.5.6",
        "axios": "^1.13.4",
        "commander": "^14.0.3",
        "dotenv": "^17.2.3",
        "handlebars": "^4.7.8",
        "node-forge": "^1.3.3",
        "pdfkit": "^0.17.2",
        "pg": "^8.18.0",
        "qrcode": "^1.5.4",
        "reflect-metadata": "^0.2.2",
        "soap": "^1.6.4",
        "typeorm": "^0.3.28",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.2.0",
        "@types/node-forge": "^1.3.14",
        "@types/pdfkit": "^0.17.4",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
